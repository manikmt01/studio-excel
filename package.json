  "scripts": {
    "dev": "concurrently \"yarn watch\" \"yarn serve\"",
    "watch": "tailwindcss -i ./src/styles/input.css -o ./src/css/style.css --watch --minify",
    "build": "tailwindcss -i ./src/styles/input.css -o ./src/css/style.css --minify",
    "serve": "lite-server"
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "lite-server": "^2.6.1",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.0.0"
  },
  "dependencies": {
    "@tailwindcss/cli": "^4.0.0",
    "@tailwindcss/postcss": "^4.0.0"
  }
}
